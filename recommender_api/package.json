{
  "name": "recommender_api",
  "version": "1.0.0",
  "description": "Recommender System API with Neo4j",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cd .. && npx newman run postman/collections/search-filter-tests.postman_collection.json --globals postman/globals/workspace.postman_globals.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "json-rules-engine": "^7.3.1",
    "morgan": "^1.10.0",
    "neo4j-driver": "^5.27.0",
    "ollama": "^0.6.3",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.16"
  }
}
